<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:gravity="start|center"
    android:elevation="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:elevation="3dp">

            <TextView
                android:id="@+id/main_tv_fromLg"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"/>

            <ImageButton
                android:id="@+id/main_ib_exchange_lgSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:theme="@style/RipplePressed"
                android:src="@drawable/ic_swap_horiz_white_24dp"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/main_tv_toLg"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|end">

            <ImageButton
                android:id="@+id/main_ib_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_dashboard_black_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:theme="@style/RipplePressed"
                android:contentDescription="@string/Function"/>

            <ImageButton
                android:id="@+id/main_ib_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_settings_black_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:theme="@style/RipplePressed"
                android:contentDescription="@string/Settings" />

        </LinearLayout>

    </LinearLayout>

